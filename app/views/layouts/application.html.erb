<!DOCTYPE html>
<html>
<head>
  <title>NonProfitDonator</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar">
    <% if flash[:alert] %>
      <div class="row">
        <div class="alert alert-danger">
          <%= flash[:alert] %>
        </div>
      </div>
    <% end %>
    <% if flash[:notice] %>
      <div class="row">
        <div class="alert alert-info">
          <%= flash[:notice] %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="container">
    <%= yield %>
  </div>
</body>
</html>
