<div class='text-center'>
  <div class='col-sm-5' id="welcome-row">
    <h1>Non Profit Donater</h1>
    <%= form_tag charges_path do %>
      <article>
        <label class="amount">
          <span>Amount: <%= number_to_currency(@donation.price) %></span>
          <%= hidden_field_tag :amount, :value => @donation.price.to_i %>
        </label>
      </article>

      <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
              data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
              data-description="<%= @dollar_amount %> donation"
              data-amount="<%= @cents %>"></script>
    <% end %>
  </div>
</div>
